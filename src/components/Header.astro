---
import Logo from '../assets/Logo.png'
const Pages = [
    {name:"マニュアル",url:"manual"},
    {name:"サポート",url:"support"},
    {name:"リリース",url:"releases"},
    {name:"コンタクト",url:"contact"},
    {name:"デベロッパー",url:"developer"},
]
---
<div class="w-full h-24 fixed top-0 bg-black bg-opacity-30 backdrop-blur-md -mx-2 flex">
    <a href="/" class={"outline-none focus:bg-white/20 focus:rounded-md focus:hover:bg-transparent duration-200 "+(Astro.url.pathname=="/" ? "brightness-110":"")}>
        <img src={Logo.src} class="h-full cursor-pointer" alt="O-Asis" transition:persist>
    </a>
    <div class="w-10/12 grid-cols-6 grid">
        {Pages.map(e => 
            <div class="w-full h-full pt-5">
                <div class="w-full h-5/6 flex justify-center items-center">
                    <a href={e.url} class={"outline-none focus:bg-white/20 focus:rounded-md focus:p-2 focus:hover:bg-transparent duration-200 "+(Astro.url.pathname==`/${e.url}` ? "font-bold":"")}>{e.name}</a>
                </div>
                {
                Astro.url.pathname==`/${e.url}` &&
                <div class="w-full h-1/6 flex justify-center items-center">
                    <div class="h-2/5 bg-purple-500 w-4/5 mb-2" transition:name="HeaderBar"></div>
                </div>
                }
            </div>
        )}
        <div class="w-full h-full flex justify-center items-center pt-3">
            <a href={`/en${Astro.url.pathname}`} class="outline-none focus:bg-white/20 focus:rounded-md focus:hover:bg-transparent duration-200 py-1 px-4 border border-gray-300 rounded-md cursor-pointer text-xl text-gray-300 hover:border-gray-200 hover:text-gray-200">
                English
            <a/>
        </div>
    </div>
</div>
